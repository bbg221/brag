<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/niu_008"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout

        android:id="@+id/suiji_layout"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true">
        <ListView
            android:id="@+id/lv_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/iv_suijikaishi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/kaishi_001"
                android:layout_centerHorizontal="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="清输入用户昵称或者ID"
                    android:background="@drawable/sharp"
                    android:textSize="9sp"
                    android:id="@+id/editText" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/fangdajing"/>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>


    </RelativeLayout>