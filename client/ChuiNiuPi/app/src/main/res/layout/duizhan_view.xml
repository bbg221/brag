<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fangshe_001">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/title_bar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/exit"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/laba"
                android:id="@+id/imageView"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:src="@drawable/guangbo"
                android:id="@+id/imageView2" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_marginRight="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/shard"
                android:layout_marginRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="#ffffff"
                android:textSize="12sp"/>
        </LinearLayout>

    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:background="@drawable/dibu"
    android:layout_alignParentBottom="true">

    <ImageView
    android:layout_width="30dp"
    android:layout_height="wrap_content"
    android:src="@drawable/shezhi"
    android:layout_alignParentRight="true"
    android:layout_marginRight="30dp"
        android:id="@+id/imageView5" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        android:gravity="center_vertical"
        android:layout_marginRight="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5"
        android:layout_marginEnd="40dp">

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/dore_gogngao"
        android:text="公告"
        android:checked="true"
        android:textColor="@color/ziti_yanse"
        android:id="@+id/iv_gonggao"
        android:gravity="center"
        android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/iv_yuezhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/dore_yuezhan"
            android:text="约战"
            android:textColor="@color/ziti_yanse"
            android:layout_weight="1"
            android:gravity="center"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/dore_paihang"
            android:text="排行"
            android:textColor="@color/ziti_yanse"
            android:layout_weight="1"
            android:id="@+id/iv_paihang"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/iv_zhanshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/dore_zhanshu"
            android:text="战书"
            android:textColor="@color/ziti_yanse"
            android:layout_weight="1"
            android:gravity="center"/>
        <RadioButton
            android:id="@+id/iv_wode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/dore_wode"
            android:text="我的"
            android:textColor="@color/ziti_yanse"
            android:layout_weight="1"
            android:gravity="center"/>

    </RadioGroup>
</RelativeLayout>

    <FrameLayout
       android:id="@+id/fm_framen"
       android:layout_width="550dp"
       android:layout_height="260dp"
        android:layout_centerInParent="true">

    </FrameLayout>
</RelativeLayout>